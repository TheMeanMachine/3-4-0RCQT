
<!doctype html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Log In</title>
		<meta name="description" content="form to add new books">
		<meta name="author" content="Mark Tyers">
		<link href="/style.css" type="text/css" rel="stylesheet" />
	</head>
	<body class="whiteText">
		<div class="backgroundImg"></div>
		<h1>Log In</h1>
		{{#if msg}}
 			<p class="msg">{{msg}}</p>
		{{/if}}
		<div class="loginForm">
		<form action="/login" method="post" >
			
				<p>Username:<br /><input type="text" name="user" class="loginInput" placeholder="Your username" value="{{user}}" autofocus></p>
				<p>Password:<br /><input type="password" name="pass" class="loginInput" placeholder="Your password" value=""></p>
				<p><input type="submit" value="Log in" class="loginSubmit"></p>
			
		</form>

		<a href="/register">
		<button class="loginSubmit" id="secondary">
			<span>
				Register
			</span>
		</button>
		</a>
		</div>
	</body>
</html>
